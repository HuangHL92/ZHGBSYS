html{margin: 0; padding: 0; }
body{width:100%; height:100%;  margin: 0; padding: 0; background-image: url(../images/login-bodybg.jpg)!important; background-repeat: no-repeat;  background-color:#243e92; background-size: 100%; background-position:left top; color: #333; font-size: 14px; font-family: "microsoft yahei"; position: relative;}
h1,h2,h3,h4,h5,h6,p,li,a,ul{margin: 0; padding: 0;}
ul li,ul{list-style: none;}
a{text-decoration: none; color: #333;}
a:hover{color:#ee422c; text-decoration: none;}
.login-top{width:950px; height:200px; margin:auto; margin-top:30px;}
.login-top img{margin-top: 30px;
    margin: auto;
   }
.login-box{width:950px; height:370px; background: #fff; margin:20px auto; box-shadow: 0 0 10px #222;}
.login-left{height:100%; width:45%; float: left; background-image: url(../images/min-pho.png); background-repeat: no-repeat; background-position: center; background-size:80%;  vertical-align: top;}
.login-right{width:55%; height:100%; float:left ; margin-top:2%; vertical-align: top;}
.clear-left{clear: left;}
.login-footer{width:100%; height:36px; position: fixed; bottom:0; font-size:14px; color:#fff; text-align: center;margin-bottom:20px;}
.login-content{width:60%; margin: 0 auto;margin-top:50px;}
.login-title{width:100%; height:32px;  font-size:24px;  text-align: center; color:#555 }
.login-user{height: 45px; /* line-height: 45px; */ margin-top:20px; width:100%; font-size: 14px; background-image: url(../images/dot-user.png); background-repeat: no-repeat; background-position: left top; background-color: #f2f4f3; border:1px solid #e8e8e8; text-indent: 4em;}
.login-password{height: 45px; /* line-height: 45px; */ margin-top:20px; width:100%; font-size: 14px; background-image: url(../images/dot-password.png); background-repeat: no-repeat; background-position: left top; background-color: #f2f4f3; border:1px solid #e8e8e8; text-indent: 4em;}
.inputcheck{width:14px; height:14px; background: #fff; border:1px solid #777;}
.login-input{height: 46px; line-height: 46px; font-size: 12px; text-align: center;}
.login-input .inputcheck:nth-child(2){margin-left:40px;}
.login-but{height: 48px; width:100%; background:#1e6de4; font-size:16px; font-weight: bold; text-align: center; border:0; color: #fff; cursor: pointer;}

@media screen and (max-height: 769px) {
  .login-box {
        height:330px;
        margin:0 auto;
        width: 900px;
    }
    .login-top{background-size:15%; height:160px;}
    .login-top img{margin-left: 180px;}
}
